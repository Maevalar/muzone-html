{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Вход в админку</h1>

        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="form-group">
                <label for="username">Имя пользователя:</label>
                <input type="text" name="_username" id="username" class="form-control" required autofocus>
            </div>

            <div class="form-group">
                <label for="password">Пароль:</label>
                <input type="password" name="_password" id="password" class="form-control" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="btn btn-primary">Войти</button>
        </form>

        <a href="{{ path('google.connect_start') }}" class="btn btn-primary">Войти с помощью Google</a>
    </div>
{% endblock %}